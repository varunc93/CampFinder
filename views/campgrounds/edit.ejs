<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit campground <%= campgrounds.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campgrounds._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campgrounds.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campgrounds.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campgrounds.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campgrounds.price %>" min="1.00" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>    

<% include ../partials/footer %>
